<script type="text/javascript">
    var id = getQuery()["id"];
    var course = getQuery()["course"];
    $(function() {
        $.ajax({
            url: '/seminar/' + id,
            type: 'GET',
            dataType: 'json',
            success: function(result) {
                $("#name").text(result.name);
                $("#description").text(result.description);
                $("#groupingMethod").text(result.groupingMethod === "fixed" ? "固定分组" : "随机分组");
                $("#startTime").text(result.startTime);
                $("#endTime").text(result.endTime);
                for (var i = result.topics.length; i--;) {
                    $(".topicBlockBody").prepend("<div class=\"topicBlock\" data-topic-id=\"" + result.topics[i].id + "\"><div class=\"topicBlockFont\">"+ result.topics[i].name +"</div></div>");
                }
                $(".topicBlock").click(function () {
                    if ($(this).attr("data-topic-id")) {
                        window.location.href = "/TeacherTopicInfo?id=" +
                            $(this).attr("data-topic-id") +
                            "&course=" +
                            course +
                            "&seminar=" +
                            id;
                    } else {
                        window.location.href = "/TeacherCreateSeminar?id=" +
                            $(this).attr("data-topic-id") +
                            "&course=" +
                            course +
                            "&seminar=" +
                            id;
                    }
                });
            }
        });
        $("#update").click(function() {
            window.location.href = "/TeacherUpdateSeminar?id=" + id + "&course=" + course;
        });
        $("#delete").click(function() {
            if (confirm("是否确认删除讨论课？")) {
                $.ajax({
                    url: '/seminar/' + id,
                    type: 'DELETE',
                    success: function() {
                        window.location.href = "/TeacherCourseInformation?id=" + course;
                    }
                });
            }
        });
    });
</script>
